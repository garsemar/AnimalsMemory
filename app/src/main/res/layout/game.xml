    <TextView
        android:id="@+id/textView9"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Movements: 0"
        android:textSize="34sp" />

</LinearLayout>